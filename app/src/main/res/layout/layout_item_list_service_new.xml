<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="android.widget.ImageButton" />

        <variable
            name="viewmodel"
            type="vn.hexagon.vietnhat.ui.list.PostListViewModel" />

        <variable
            name="position"
            type="Integer" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/newListItemArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:foreground="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:adjustViewBounds="true"
            android:background="@drawable/round_corner_img_bg"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            app:imageUrl="@{viewmodel.newListResponse.data[position].img}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/backgrounds/scenic[19]" />

        <TextView
            android:id="@+id/itemSubContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@{viewmodel.newListResponse.data[position].title}"
            android:textColor="@color/color_indigo_26415d"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            tools:text='Cây cối bị "quật đổ" tại Hà Nội do ảnh hưởng của bão số 3' />

        <TextView
            android:id="@+id/itemLastText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:text="@{viewmodel.newListResponse.data[position].date}"
            android:textColor="@color/color_grey_9b9b9b"
            android:textSize="@dimen/sp_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/itemSubContent"
            tools:text="220 Cầu Giấy, Ba Đình, Hà Nội" />

        <View
            android:id="@+id/itemDivider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/color_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newItemBarrier" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/newItemBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="imageView,itemLastText"
            tools:layout_editor_absoluteY="121dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>