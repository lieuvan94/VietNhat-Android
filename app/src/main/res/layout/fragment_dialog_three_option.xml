<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg_dialog_outside">

        <RelativeLayout
            style="@style/DialogIndigoStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_40"
            android:layout_marginEnd="@dimen/dp_40">

            <Button
                android:id="@+id/dialogThreeEditBtn"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/dialog_three_symbol"
                android:layout_alignParentTop="true"
                android:contentDescription="@null"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                style="@style/WhiteButtonStyle"
                android:layout_marginTop="@dimen/dp_30"
                android:text="@string/edit_lbl"/>
            <View
                android:id="@+id/dialog_three_symbol"
                android:layout_alignParentTop="true"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_centerHorizontal="true"/>
            <Button
                android:id="@+id/dialogThreeDeleteBtn"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:contentDescription="@null"
                android:layout_width="wrap_content"
                android:layout_toEndOf="@+id/dialog_three_symbol"
                android:textAllCaps="false"
                android:layout_height="@dimen/dp_40"
                style="@style/RedButtonStyle"
                android:layout_marginTop="@dimen/dp_30"
                android:text="@string/delete_lbl"/>

            <TextView
                android:id="@+id/dialogThreeCancelBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dialogThreeDeleteBtn"
                android:layout_marginTop="@dimen/dp_16"
                android:textSize="@dimen/sp_16"
                android:text="@string/photo_dialog_cancel"
                android:textColor="@color/colorWhite"
                android:textAllCaps="true"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>
    </RelativeLayout>

</layout>