  <ImageView
      android:id="@+id/leftActionBarButton"
      android:layout_width="@dimen/dp_18"
      android:layout_height="@dimen/dp_18"
      android:layout_centerVertical="true"
      android:layout_marginStart="@dimen/dp_16"
      android:src="@drawable/ic_back"
      android:background="?attr/selectableItemBackgroundBorderless"
      tools:ignore="ContentDescription"
      />

  <FrameLayout
      android:id="@+id/contentActionBarLayout"
      android:layout_width="@dimen/action_bar_base_left_button_width"
      android:layout_height="@dimen/action_bar_base_left_button_height"
      android:layout_centerVertical="true"
      android:layout_toEndOf="@+id/leftActionBarButton"
      android:layout_toStartOf="@id/rightActionBarButton"
      />

  <ImageView
      android:id="@+id/rightActionBarButton"
      android:layout_width="@dimen/dp_18"
      android:layout_height="@dimen/dp_18"
      android:layout_alignParentEnd="true"
      android:layout_centerVertical="true"
      android:layout_marginEnd="@dimen/dp_16"
      android:background="?attr/selectableItemBackgroundBorderless"
      android:visibility="invisible"
      tools:ignore="ContentDescription"
      />

