<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/action_bar_simple_text_content_padding_horizontal"
    android:paddingEnd="@dimen/action_bar_simple_text_content_padding_horizontal"
    >

  <ImageView
      android:id="@+id/titleAvatarUserImage"
      android:layout_width="@dimen/dp_40"
      android:layout_height="@dimen/dp_40"
      android:layout_centerVertical="true"
      android:layout_marginEnd="@dimen/margin_small"
      />

  <TextView
      android:id="@+id/titleChatText"
      style="@style/BoldText"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_toEndOf="@id/titleAvatarUserImage"
      android:textColor="@color/action_bar_simple_text_title_color"
      android:textSize="@dimen/action_bar_simple_text_title_single_size"
      />

</RelativeLayout>