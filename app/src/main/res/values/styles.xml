<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:statusBarColor">@color/colorWhite</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">@dimen/dp_260</item>
    </style>

    <!--Style for Pink button-->
    <style name="ActionBarStyle">
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/sp_17</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Style for Pink button-->
    <style name="PinkButtonStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:background">@drawable/ripple_button_pink_bg</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--Style for White button-->
    <style name="WhiteButtonStyle">
        <item name="android:textColor">@color/color_indigo_26415d</item>
        <item name="android:background">@drawable/ripple_button_white_bg</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--Style for Indigo button-->
    <style name="IndigoButtonStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/ripple_button_indigo_bg</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:paddingTop">@dimen/dp_17</item>
        <item name="android:paddingBottom">@dimen/dp_17</item>
    </style>

    <!--Style for Indigo border and white solid button-->
    <style name="IndigoBorderButtonStyle">
        <item name="android:textColor">@color/color_indigo_26415d</item>
        <item name="android:background">@drawable/ripple_button_indigo_border</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:paddingTop">@dimen/dp_17</item>
        <item name="android:paddingBottom">@dimen/dp_17</item>
    </style>

    <!--Style for Red button-->
    <style name="RedButtonStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/ripple_button_red_bg</item>
    </style>

    <style name="BoldText">
<!--        <item name="fontFamily">@font/roboto_regular</item>-->
<!--        <item name="fontWeight">700</item>-->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FullScreenDialogStyle">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <!--Dialog Background-->
    <style name="DialogStyle">
        <item name="android:background">@drawable/dialog_shape_bg</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">@dimen/dp_20</item>
        <item name="android:paddingRight">@dimen/dp_20</item>
    </style>
    <!--Dialog Background Indigo-->
    <style name="DialogIndigoStyle">
        <item name="android:background">@drawable/shape_indigo_bg</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">@dimen/dp_20</item>
        <item name="android:paddingRight">@dimen/dp_20</item>
    </style>
    <!--Title Dialog-->
    <style name="TitleDialogStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:layout_marginTop">@dimen/dp_40</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_indigo_26415d</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <!--Label Dialog-->
    <style name="LabelDialogStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_16</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="fontWeight">500</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/color_indigo_26415d</item>
    </style>

    <!--Label Address Dialog-->
    <style name="LabelAddrDialogStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="fontWeight">500</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">@color/color_indigo_26415d</item>
    </style>

    <!--Edit Text Dialog-->
    <style name="EditTextDialogStyle">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/color_indigo_26415d</item>
        <item name="android:textColorHint">@color/color_grey_9b9b9b</item>
        <item name="android:background">@drawable/edit_text_common_bg</item>
    </style>

    <!--Edit Text Multiline-->
    <style name="EditTextMultilineStyle">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/color_indigo_26415d</item>
        <item name="android:textColorHint">@color/color_grey_9b9b9b</item>
        <item name="android:background">@drawable/edit_text_common_bg</item>
        <item name="android:inputType">text|textMultiLine</item>
        <item name="android:layout_height">@dimen/dp_100</item>
        <item name="android:gravity">top</item>
        <item name="android:lines">4</item>
    </style>

    <!--Spinner Dialog-->
    <style name="SpinnerDialogStyle">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/color_indigo_26415d</item>
        <item name="android:textColorHint">@color/color_grey_9b9b9b</item>
        <item name="android:indicatorRight">@dimen/dp_12</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:background">@drawable/drop_down_list_bg</item>
    </style>

    <!--Address Dialog-->
    <style name="AddressDialogStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/edit_text_common_bg</item>
    </style>

    <style name="RatingBarStyleCustom" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">18dp</item>
        <item name="android:maxHeight">25dp</item>
        <item name="android:progressDrawable">@drawable/app_rating_bar_selector</item>
    </style>

    <!--Scroll bar -->
    <style name="scrollbar_style">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_thumb_background</item>
        <item name="android:scrollbarTrackVertical">@drawable/scrollbar_track_background</item>
        <item name="android:scrollbarSize">@dimen/dp_4</item>
        <item name="android:scrollbarFadeDuration">800</item>
        <item name="android:scrollbarDefaultDelayBeforeFade">500</item>
        <item name="android:smoothScrollbar">true</item>
    </style>

    <dimen name="dp_240">240dp</dimen>
    <dimen name="dp_260">260dp</dimen>
</resources>
